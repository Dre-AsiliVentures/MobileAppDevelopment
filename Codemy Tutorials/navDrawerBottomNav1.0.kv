                    text_color: 0, 0, 0, 1
        Screen:
            name: "Farm Settings"
            BoxLayout:
                orientation: 'vertical'
                MDToolbar:
                    id: toolbar
                    x: toolbar.height
                    title: 'INDUSTRIAL IRRIGATION SYSTEM'
                    left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
                    elevation: 10
                MDLabel:
                    text: "All Farm Settings go here"
                    halign: "center"
        Screen:
            name: "Wireless_Settings"
            BoxLayout:
                orientation: 'vertical'
                MDToolbar:
                    id: toolbar
                    x: toolbar.height
                    title: 'INDUSTRIAL IRRIGATION SYSTEM'
                    left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
                    elevation: 10
                MDLabel:
                    text: "All Wireles settings go here"
                    halign: "center"
    MDNavigationDrawer:
        id: nav_drawer
        ContentNavigationDrawer:
            #id: nav_drawer
            screen_manager: screen_manager
            nav_drawer: nav_drawer
