<ItemDrawer>:
    theme_text_color: "Custom"
    on_release: self.parent.set_color_item(self)

    IconLeftWidget:
        id: icon
        icon: root.icon
        theme_text_color: "Custom"
        text_color: root.text_color
<ContentNavigationDrawer>:
    orientation:"vertical"
    padding:"8dp"
    spacing:"8dp"
    AnchorLayout:
        anchor_x:"left"
        size_hint_y:None
        height:avatar.height

        Image:
            id:avatar
            size_hint:None,None
            size:"116dp","116dp"
            source:"images/irrigation.jpg"
    MDLabel:
        text:"Irrigation Schedule"
        font_style:"Button"
        adaptive_height: True
    MDLabel:
        text:"fyr07iir@gmail.com"
        font_style:"Caption"
        adaptive_height:True
    ScrollView:
        DrawerList:
            id: md_list
            MDList:
                OneLineListItem:
                    text: "Home"
                    on_press:
                        root.nav_drawer.set_state("close")
                        root.screen_manager.current = "menu"
            MDList:
                OneLineListItem:
                    text: "Farm Analytics"
                    on_press:
                        root.nav_drawer.set_state("close")
                        root.screen_manager.current = "Farm Analytics"
                OneLineListItem:
                    text: "Farm Settings"
                    on_press:
                        root.nav_drawer.set_state("close")
                        root.screen_manager.current = "Farm Settings"

                OneLineListItem:
                    text: "Hardware settings"
                    on_press:
                        root.nav_drawer.set_state("close")
                        root.screen_manager.current = "Wireless_Settings"

MDNavigationLayout:
    #BoxLayout:
    orientation: 'vertical'
    ScreenManager:
        id:screen_manager
        Screen:
            name:'menu'
            BoxLayout:
                orientation: 'vertical'
                MDToolbar:
                    id: toolbar
                    x: toolbar.height
                    title: 'INDUSTRIAL IRRIGATION SYSTEM'
                    left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
                    elevation: 10
                MDBottomNavigation:
                    MDBottomNavigationItem:
                        name: "Analytics"
                        text: "Chat"
                        MDLabel:
                            text: "Hawa ndio watu mnabonga nao"
                            align : "center"
                    MDBottomNavigationItem:
                        name: "Screen 2"
                        text: "Irrigation Schedule"
                        icon: "calendar"
                        MDLabel:
                            text: "Hii ndio caledar schedule yako"
                            align : "center"
                    MDBottomNavigationItem:
                        name: "Screen 3"
                        text: "Tank Details"
                        MDLabel:
                            text: "Hii ndio status yako"
                            align : "center"
        #id: screen_manager_
        Screen:
            name: "Farm Analytics"
            BoxLayout:
                orientation: 'vertical'
                MDToolbar:
                    id: toolbar
                    x: toolbar.height
                    title: 'INDUSTRIAL IRRIGATION SYSTEM'
                    left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
                    elevation: 10
                MDLabel:
                    text: "All Farm Analytics go here"
                    halign: "center"
                MDLabel:
                    text: "INICIO"
                    font_name: 'Roboto'
                    bold: True
                    font_size: "60"
                    halign: "center"
                    pos_hint: {'center_y':0.9}
